{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Next.js: debug on port 3000",
            "type": "node-terminal",
            "request": "launch",
            "command": "yarn dev",
            "env": {
                "PORT": "3000"
            },
            "preLaunchTask": "Kill port 3000"
        },
        {
            "name": "Next.js: debug frontend",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}",
            "sourceMapPathOverrides": {
                "webpack://_N_E/*": "${workRoot}/*"
            }
        }
    ]
}